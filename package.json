{
  "name": "eternis-33-companion",
  "version": "1.0.0",
  "description": "Universal AI companion system for Eternis-33",
  "main": "src/companion_core.js",
  "scripts": {
    "test": "jest",
    "start": "node src/companion_core.js",
    "dev": "nodemon src/companion_core.js",
    "lint": "eslint . --ext .js",
    "format": "prettier --write .",
    "add-headers": "node scripts/add_license_headers.js --apply",
    "doctor": "pnpm -r run doctor",
    "e2e:web": "pnpm --filter @spectra/web-e2e e2e",
    "e2e:mobile:ios": "pnpm --filter @spectra/mobile-e2e e2e:ios:test",
    "e2e:mobile:android": "pnpm --filter @spectra/mobile-e2e e2e:android:test",
    "e2e:all": "pnpm e2e:web && pnpm e2e:mobile:ios && pnpm e2e:mobile:android",
    "serve:proto": "node scripts/serve-prototype.js",
    "e2e:web:local": "start /B node scripts/serve-prototype.js && timeout 2 && npm run e2e:web",
    "pnpme2e:web": "pnpm -C apps/web/e2e run e2e",
    "pnpme2e:ios:build": "pnpm -C apps/mobile/e2e run e2e:ios:build",
    "pnpme2e:ios:test": "pnpm -C apps/mobile/e2e run e2e:ios:test",
    "pnpme2e:android:build": "pnpm -C apps/mobile/e2e run e2e:android:build",
    "pnpme2e:android:test": "pnpm -C apps/mobile/e2e run e2e:android:test",
    "prepare": "husky"
  },
  "keywords": [
    "eternis-33",
    "ai-companion",
    "game-ai",
    "educational-game"
  ],
  "author": "Remedium Music LLC",
  "license": "Spectral Flow License v1.0",
  "dependencies": {
    "express": "^4.18.2",
    "socket.io": "^4.7.2"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.3.0",
    "@commitlint/config-conventional": "^19.2.2",
    "@types/jest": "^30.0.0",
    "@types/react": "^18.3.3",
    "@types/react-dom": "^18.3.0",
    "@types/uuid": "^10.0.0",
    "eslint": "^8.49.0",
    "husky": "^9.1.6",
    "jest": "^30.1.3",
    "lint-staged": "^15.2.7"
    "nodemon": "^3.0.1",
    "prettier": "^2.8.8",
    "start-server-and-test": "^2.0.3",
    "ts-jest": "^29.4.1",
    "typescript": "^5.9.2",
    "uuid": "^11.1.0",
    "wait-on": "^7.2.0",
    "zod": "^4.1.5",
    "husky": "^9.1.6",
    "lint-staged": "^16.1.6"
  },
  "optionalDependencies": {
    "axios": "^1.4.0",
    "dotenv": "^16.1.4",
    "winston": "^3.9.0"
  },
  "lint-staged": {
    "**/*.{ts,tsx,js,jsx,json,md,yml,yaml}": [
      "prettier --write",
      "eslint --fix"
    ]
  }
}
